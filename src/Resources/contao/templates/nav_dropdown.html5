<div class="dropdown-menu dropdown-menu-right">
	<?php foreach ($this->items as $item): ?>
    <?php if ($item['isActive']): ?>
      <a class="<?= $item['class'] ?> dropdown-item "><?= $item['link'] ?></a>
    <?php else: ?>
      <a<?php if ($item['class']) echo ' class="' . $item['class'] . ' dropdown-item"'; ?> href="<?= $item['href'] ?: './' ?>" title="<?= $item['pageTitle'] ?: $item['title'] ?>"><?= $item['title'] ?></a>
    <?php endif; ?>
  <?php endforeach; ?>
</div>
