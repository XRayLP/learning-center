{% extends '@LearningCenter/base.html.twig' %}

{% block main %}
    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title">{% trans %}Welcome %name%, in the Learning Center of the School %schoolname%.{% endtrans %}</span>
        </div>
    </div>

    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <p>Storage Usage</p>
            <div class="progress">
            <div class="determinate" style="width: {{ storage.0 }}%"></div>
            </div>
            <p>{{ storage.1 }} von {{ storage.2 }} belegt.</p>
        </div>
    </div>
{% endblock %}