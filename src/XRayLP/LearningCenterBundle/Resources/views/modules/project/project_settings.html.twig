{% extends '@LearningCenter/modules/project/base.html.twig' %}
{% trans_default_domain 'project' %}

{% block project %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <hr>

    {% if is_granted('project.remove', project) %}
        <div class="card border-danger">
            <div class="card-header">{% trans %}project.delete{% endtrans %}</div>
            <div class="card-body text-danger">
                <p class="card-text">{% trans %}project.delete.text{% endtrans %}</p>
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#modalConfirmDelete">{% trans %}project.delete.button{% endtrans %}</button>
            </div>
        </div>

        <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="Confirm Modal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalConfirmDeleteTitle">{% trans %}project.delete.confirm{% endtrans %}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {% trans with {'{name}': project.name} %}project.delete.confirm.text{% endtrans %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}project.delete.cancel{% endtrans %}</button>
                        <a type="button" class="btn btn-danger" href="{{ url('lc_projects_delete', {'id': project.id}) }}">{% trans %}project.delete.confirm.button{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}
