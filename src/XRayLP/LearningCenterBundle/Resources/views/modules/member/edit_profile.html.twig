{% extends '@LearningCenter/base.html.twig' %}

{% block form_group_class -%}
    col-6
{%- endblock form_group_class %}

{% block main %}
    <h4>Infos zu meinem Account</h4>
    
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Account</span>
          <div class="divider"></div>
            <div class="row">
                <div class="col s4 m2">
                  <p>Vorname:</p>
                  <p>Nachname:</p>
                  <p>Geburtsdatum:</p>
                  <p>E-Mail:</p>
                  <p>Rang:</p>
                  <p>Klasse:</p>
                </div>
                
                <div class="col s8 m10">
                  <p>{{frontendUser.firstname}}</p>
                  <p>{{frontendUser.lastname}}</p>
                  <p>{{frontendUser.dateOfBirth}}</p>
                  <p>{{frontendUser.email}}</p>
                  <p>{{frontendUser.memberType}}</p>
                  <p></p>
                </div>
            </div>
        </div>
      </div>
    
    {{ form(form) }}
        {{ form_widget(form, {'attr': {'class': 'col-6'}}) }}
    {{ form_end(form) }}
{% endblock %}