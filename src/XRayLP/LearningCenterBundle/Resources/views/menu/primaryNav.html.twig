{% extends '@KnpMenu/menu.html.twig' %}

{% block linkElement %}
    <li class="test"><a href="{{ item.uri }}"{{ item.attributes(item.linkAttributes) }} class="nav-link">
        {% if item.attribute('icon') is not empty  %}
            <i class="{{ item.attribute('icon') }} fa-fw"></i>
        {% endif %}
        {{ block('label') }}
    </a></li>
{% endblock %}

{% block spanElement %}
    <li class="active"><a>{{ item.attributes(item.labelAttributes) }}>
        {% if item.attribute('icon') is not empty  %}
            <i class="{{ item.attribute('icon') }} fa-fw"></i>
        {% endif %}
        {{ block('label') }}</a>
	</li>
{% endblock %}